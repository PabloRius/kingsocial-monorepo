{
  "tasks": {
    "build": {
      "dependsOn": ["^db:generate", "^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": ["DATABASE_URL"]
    },
    "db:generate": {
      "inputs": ["prisma/schema.prisma"],
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "dev": { "cache": false, "persistent": true, "env": ["DATABASE_URL"] }
  }
}
