{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "DOM.Iterable", "ESNext"],
    "jsx": "preserve",
    "noEmit": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@repo/shared-types": ["../../packages/shared-types/src/index.ts"],
      "@repo/database": ["../../packages/database/src/index.ts"],
      "@/*": ["./src/*"]
    },
    "incremental": true,
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "../../packages/database/src/**/*",
    "../../packages/shared-types/src/**/*"
  ]
}
